@page
@using Model
@model MonsterMatchWeb.Pages.Weapons.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Weapon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Weapon.Id" />
            <div class="form-group">
                <label asp-for="Weapon.Name" class="control-label"></label>
                <input asp-for="Weapon.Name" class="form-control" />
                <span asp-validation-for="Weapon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.Attack" class="control-label"></label>
                <input asp-for="Weapon.Attack" class="form-control" />
                <span asp-validation-for="Weapon.Attack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weapon.ElementType" class="control-label"></label>
                <select asp-for="Weapon.ElementType" class="form-control" asp-items="@Html.GetEnumSelectList<ElementType>()"></select>
                <span asp-validation-for="Weapon.ElementType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
