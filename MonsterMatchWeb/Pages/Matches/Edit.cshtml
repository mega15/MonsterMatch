@page
@model MonsterMatchWeb.Pages.Matches.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Match.Id" />
            <div class="form-group">
                <label asp-for="Match.Name" class="control-label"></label>
                <input asp-for="Match.Name" class="form-control" />
                <span asp-validation-for="Match.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character1Id" class="control-label"></label>
                <select asp-for="Character1Id" class="form-control" asp-items="ViewBag.CharacterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Weapon1Id" class="control-label"></label>
                <select asp-for="Weapon1Id" class="form-control" asp-items="ViewBag.WeaponId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Character2Id" class="control-label"></label>
                <select asp-for="Character2Id" class="form-control" asp-items="ViewBag.CharacterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Weapon2Id" class="control-label"></label>
                <select asp-for="Weapon2Id" class="form-control" asp-items="ViewBag.WeaponId"></select>
            </div>
            <div class="form-group">
                <label asp-for="WinnerId" class="control-label"></label>
                <select asp-for="WinnerId" class="form-control" asp-items="ViewBag.CharacterId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
