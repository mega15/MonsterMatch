@page
@model MonsterMatchWeb.Pages.Characters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].Life)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].ElementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character[0].CharacterType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Character) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Life)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterType)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
