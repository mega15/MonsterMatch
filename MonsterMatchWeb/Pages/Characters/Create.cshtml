@page
@using Model
@model MonsterMatchWeb.Pages.Characters.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerId" class="control-label"></label>
                <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.PlayerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Character.Name" class="control-label"></label>
                <input asp-for="Character.Name" class="form-control" />
                <span asp-validation-for="Character.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Attack" class="control-label"></label>
                <input asp-for="Character.Attack" class="form-control" />
                <span asp-validation-for="Character.Attack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.Life" class="control-label"></label>
                <input asp-for="Character.Life" class="form-control" />
                <span asp-validation-for="Character.Life" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.ElementType" class="control-label"></label>
                <select asp-for="Character.ElementType" class="form-control" asp-items="@Html.GetEnumSelectList<ElementType>()"></select>
                <span asp-validation-for="Character.ElementType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character.CharacterType" class="control-label"></label>
                <select asp-for="Character.CharacterType" class="form-control" asp-items="@Html.GetEnumSelectList<CharacterType>()"></select>
                <span asp-validation-for="Character.CharacterType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
